@page
@model VCMApp.UI.Areas.Admin.Pages.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 p-4">
            <h2 class="text-center">Dashboard</h2>

            <!-- Dashboard Cards -->
            <div class="row mt-4">
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg border-0 rounded-lg" style="height: 200px;">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="card-title text-center text-primary">Applied Applicants</h5>
                            <p class="card-text text-center display-4">@Model.AppliedApplicants</p>
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 70%;" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg border-0 rounded-lg" style="height: 200px;">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="card-title text-center text-danger">Failed Applicants</h5>
                            <p class="card-text text-center display-4">@Model.FailedApplicants</p>
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar bg-warning" role="progressbar" style="width: 40%;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg border-0 rounded-lg" style="height: 200px;">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="card-title text-center text-info">Total Vacancies</h5>
                            <p class="card-text text-center display-4">@Model.TotalVacancies</p>
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar bg-primary" role="progressbar" style="width: 60%;" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease-in-out;
    }

        .card:hover {
            transform: translateY(-10px);
        }

    .progress-bar {
        transition: width 0.3s ease;
    }
</style>
