@page
@model VCMApp.UI.Areas.Admin.Pages.LoginModel
@{
}

<div class="text-center mb-4">
    <h1 class="display-4 mb-3">Login</h1>
    <p class="text-muted">
        Please consider that login logic is hardcoded for rapid development purposes.
    </p>
    <p>
        UserName: <strong>admin</strong> Password: <strong>admin123</strong>
    </p>
</div>

<div class="d-flex flex-column align-items-center justify-content-center">
    <div class="card shadow-lg" style="width: 30rem;">
        <div class="card-body">
            <h2 class="card-title text-center text-primary mb-4">Admin Login</h2>

            @if (!string.IsNullOrEmpty(ModelState[string.Empty]?.Errors?.FirstOrDefault()?.ErrorMessage))
            {
                <div class="alert alert-danger">
                    @ModelState[string.Empty].Errors?.FirstOrDefault()?.ErrorMessage
                </div>
            }

            <form method="post" asp-page="Login">
                <div class="mb-4">
                    <label for="Username" class="form-label fs-5">Username</label>
                    <input asp-for="Input.Username" class="form-control form-control-lg" id="Username" />
                    <span asp-validation-for="Input.Username" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label for="Password" class="form-label fs-5">Password</label>
                    <input asp-for="Input.Password" type="password" class="form-control form-control-lg" id="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100">
                    Login
                </button>
            </form>
        </div>
    </div>
</div>
