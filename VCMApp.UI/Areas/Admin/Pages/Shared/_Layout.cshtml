<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VCMApp.Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VCMApp.UI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="Admin" asp-page="/Dashboard">VCMApp.Admin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (User.Identity.IsAuthenticated)
                    {
                    <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    Categories
                                </a>     
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="vacanciesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Vacancies
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="vacanciesDropdown">
                                    <li><a class="dropdown-item" href="#">Questions Pool</a></li>
                                    <li><a class="dropdown-item" href="#">Manage</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="applicantDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Applicants
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="applicantDropdown">
                                    <li><a class="dropdown-item" href="/Admin/ExamResult">Exam Result</a></li>
                                    <li><a class="dropdown-item" href="#">CVs</a></li>
                                    <li><a class="dropdown-item" href="#">Manage</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="examDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Exams
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="examDropdown">
                                    <li><a class="dropdown-item" href="#">Questions</a></li>
                                    <li><a class="dropdown-item" href="#">Answers</a></li>
                                </ul>
                            </li>
                     </ul>
                    }
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-between">
            <span>&copy; 2025 - VCMApp.Admin Developed By Rasul Huseynov</span>
            <a asp-page="/Index" class="text-decoration-none">Vacancies Page</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
